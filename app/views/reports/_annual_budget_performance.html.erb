<%# locals: (annual_plan:, **args) %>

<% if annual_plan.category_summaries.any? %>
  <%
    expense_summaries = annual_plan.expense_category_summaries
    savings_summaries = annual_plan.savings_category_summaries
    expense_budget_total = expense_summaries.sum(&:annual_budget)
    expense_actual_total = expense_summaries.sum(&:annual_actual)
    expense_remaining_total = expense_budget_total - expense_actual_total
  %>

  <div class="space-y-4">
    <%# Summary cards %>
    <div class="grid grid-cols-1 sm:grid-cols-4 gap-4">
      <div class="bg-container-inset rounded-xl p-4">
        <p class="text-xs font-medium text-secondary uppercase tracking-wide mb-1">
          <%= t("reports.annual_budget_performance.annual_budget") %>
        </p>
        <p class="text-lg font-semibold text-primary">
          <%= format_money Money.new(expense_budget_total, annual_plan.currency) %>
        </p>
      </div>
      <div class="bg-container-inset rounded-xl p-4">
        <p class="text-xs font-medium text-secondary uppercase tracking-wide mb-1">
          <%= t("reports.annual_budget_performance.ytd_actual") %>
        </p>
        <p class="text-lg font-semibold text-primary">
          <%= format_money Money.new(expense_actual_total, annual_plan.currency) %>
        </p>
      </div>
      <div class="bg-container-inset rounded-xl p-4">
        <p class="text-xs font-medium text-secondary uppercase tracking-wide mb-1">
          <%= t("reports.annual_budget_performance.remaining") %>
        </p>
        <p class="text-lg font-semibold <%= expense_remaining_total >= 0 ? "text-success" : "text-destructive" %>">
          <%= format_money Money.new(expense_remaining_total, annual_plan.currency) %>
        </p>
      </div>
      <div class="bg-container-inset rounded-xl p-4">
        <p class="text-xs font-medium text-secondary uppercase tracking-wide mb-1">
          <%= t("reports.annual_budget_performance.savings_rate") %>
        </p>
        <p class="text-lg font-semibold <%= annual_plan.savings_rate >= 0 ? "text-success" : "text-destructive" %>">
          <%= number_to_percentage(annual_plan.savings_rate, precision: 1) %>
        </p>
      </div>
    </div>

    <%# Expense categories table %>
    <% if expense_summaries.any? %>
      <div class="bg-container-inset rounded-xl p-1 overflow-x-auto">
        <div class="w-max sm:w-full">
          <div class="grid grid-cols-12 items-center uppercase text-xs font-medium text-secondary px-4 py-2">
            <div class="col-span-4"><%= t("reports.annual_budget_performance.category") %></div>
            <div class="col-span-2 text-right"><%= t("reports.annual_budget_performance.annual_budget") %></div>
            <div class="col-span-2 text-right"><%= t("reports.annual_budget_performance.ytd_actual") %></div>
            <div class="col-span-2 text-right"><%= t("reports.annual_budget_performance.remaining") %></div>
            <div class="col-span-2"></div>
          </div>

          <div class="bg-container rounded-lg shadow-border-xs">
            <% expense_summaries.each_with_index do |cs, idx| %>
              <div class="grid grid-cols-12 items-center px-4 py-3 text-sm">
                <div class="col-span-4">
                  <div class="flex items-center gap-2">
                    <div class="w-2 h-2 rounded-full shrink-0" style="background-color: <%= cs.color %>"></div>
                    <span class="text-primary font-medium truncate"><%= cs.name %></span>
                    <% if cs.budget_category.non_monthly? %>
                      <span class="text-xs px-1.5 py-0.5 rounded-full bg-container-inset text-secondary font-medium shrink-0">
                        <%= cs.frequency_label %>
                      </span>
                    <% end %>
                  </div>
                </div>
                <div class="col-span-2 text-right text-secondary">
                  <%= format_money Money.new(cs.annual_budget, cs.currency) %>
                </div>
                <div class="col-span-2 text-right text-primary font-medium">
                  <%= format_money Money.new(cs.annual_actual, cs.currency) %>
                </div>
                <div class="col-span-2 text-right font-medium <%= cs.annual_remaining >= 0 ? "text-success" : "text-destructive" %>">
                  <%= format_money Money.new(cs.annual_remaining, cs.currency) %>
                </div>
                <div class="col-span-2 pl-4">
                  <div class="h-1.5 bg-container-inset rounded-full overflow-hidden">
                    <% bar_class = case cs.status
                       when :over_budget then "bg-destructive"
                       when :warning then "bg-warning"
                       else "bg-success"
                       end %>
                    <div class="h-full rounded-full <%= bar_class %>"
                         style="width: <%= [cs.percent_used, 100].min %>%"></div>
                  </div>
                </div>
              </div>
              <% if idx < expense_summaries.size - 1 %>
                <%= render "shared/ruler", classes: "mx-3 lg:mx-4" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <%# Savings categories %>
    <% if savings_summaries.any? %>
      <div class="text-large mb-2 flex items-center gap-2 text-lg">
        <%= icon("piggy-bank", class: "w-5 h-5") %>
        <span><%= t("reports.annual_budget_performance.savings") %></span>
      </div>

      <div class="bg-container-inset rounded-xl p-1 overflow-x-auto">
        <div class="bg-container rounded-lg shadow-border-xs">
          <% savings_summaries.each_with_index do |cs, idx| %>
            <div class="grid grid-cols-12 items-center px-4 py-3 text-sm">
              <div class="col-span-4">
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 rounded-full shrink-0" style="background-color: <%= cs.color %>"></div>
                  <span class="text-primary font-medium truncate"><%= cs.name %></span>
                </div>
              </div>
              <div class="col-span-2 text-right text-secondary">
                <%= format_money Money.new(cs.annual_budget, cs.currency) %>
              </div>
              <div class="col-span-2 text-right text-success font-medium">
                <%= format_money Money.new(cs.annual_actual, cs.currency) %>
              </div>
              <div class="col-span-2 text-right text-secondary">
                <% savings_remaining = cs.annual_budget - cs.annual_actual %>
                <% if savings_remaining.negative? %>
                  <span class="text-success font-medium"><%= format_money Money.new(savings_remaining.abs, cs.currency) %> extra</span>
                <% else %>
                  <%= format_money Money.new(savings_remaining, cs.currency) %> left
                <% end %>
              </div>
              <div class="col-span-2 pl-4">
                <div class="h-1.5 bg-container-inset rounded-full overflow-hidden">
                  <div class="h-full rounded-full bg-success"
                       style="width: <%= [cs.percent_used, 100].min %>%"></div>
                </div>
              </div>
            </div>
            <% if idx < savings_summaries.size - 1 %>
              <%= render "shared/ruler", classes: "mx-3 lg:mx-4" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="py-8 text-center">
    <p class="text-sm text-secondary"><%= t("reports.annual_budget_performance.no_data") %></p>
  </div>
<% end %>
