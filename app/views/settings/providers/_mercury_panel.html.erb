<div class="space-y-4">
  <div class="prose prose-sm text-secondary">
    <p class="text-primary font-medium"><%= t("settings.providers.mercury_panel.setup_instructions") %></p>
    <ol>
      <li><%= t("settings.providers.mercury_panel.step1") %></li>
      <li><%= t("settings.providers.mercury_panel.step2") %></li>
      <li><%= t("settings.providers.mercury_panel.step3") %></li>
      <li><%= t("settings.providers.mercury_panel.step4") %></li>
      <li><%= t("settings.providers.mercury_panel.step5") %></li>
      <li><%= t("settings.providers.mercury_panel.step6") %></li>
    </ol>

    <p class="text-primary font-medium"><%= t("settings.providers.mercury_panel.field_descriptions") %></p>
    <ul>
      <li><%= t("settings.providers.mercury_panel.token_description").html_safe %></li>
      <li><%= t("settings.providers.mercury_panel.base_url_description") %></li>
    </ul>

    <p class="text-sm text-muted-foreground mt-2">
      <%= t("settings.providers.mercury_panel.sandbox_note").html_safe %>
    </p>
  </div>

  <% error_msg = local_assigns[:error_message] || @error_message %>
  <% if error_msg.present? %>
    <div class="p-2 rounded-md bg-destructive/10 text-destructive text-sm overflow-hidden">
      <p class="line-clamp-3" title="<%= error_msg %>"><%= error_msg %></p>
    </div>
  <% end %>

  <%
    # Get or initialize a mercury_item for this family
    # - If family has an item WITH credentials, use it (for updates)
    # - If family has an item WITHOUT credentials, use it (to add credentials)
    # - If family has no items at all, create a new one
    mercury_item = Current.family.mercury_items.first_or_initialize(name: "Mercury Connection")
    is_new_record = mercury_item.new_record?
  %>

  <%= styled_form_with model: mercury_item,
                       url: is_new_record ? mercury_items_path : mercury_item_path(mercury_item),
                       scope: :mercury_item,
                       method: is_new_record ? :post : :patch,
                       data: { turbo: true },
                       class: "space-y-3" do |form| %>
    <%= form.text_field :token,
                        label: t("settings.providers.mercury_panel.token_label"),
                        placeholder: is_new_record ? t("settings.providers.mercury_panel.token_placeholder_new") : t("settings.providers.mercury_panel.token_placeholder_update"),
                        type: :password %>

    <%= form.text_field :base_url,
                        label: t("settings.providers.mercury_panel.base_url_label"),
                        placeholder: t("settings.providers.mercury_panel.base_url_placeholder"),
                        value: mercury_item.base_url %>

    <div class="flex justify-end">
      <%= form.submit is_new_record ? t("settings.providers.mercury_panel.save_configuration") : t("settings.providers.mercury_panel.update_configuration"),
                      class: "inline-flex items-center justify-center rounded-lg px-4 py-2 text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-900 focus:ring-offset-2 transition-colors" %>
    </div>
  <% end %>

  <% items = local_assigns[:mercury_items] || @mercury_items || Current.family.mercury_items.where.not(token: [nil, ""]) %>
  <div class="flex items-center gap-2">
    <% if items&.any? %>
      <div class="w-2 h-2 bg-success rounded-full"></div>
      <p class="text-sm text-secondary"><%= t("settings.providers.mercury_panel.configured") %></p>
    <% else %>
      <div class="w-2 h-2 bg-gray-400 rounded-full"></div>
      <p class="text-sm text-secondary"><%= t("settings.providers.mercury_panel.not_configured") %></p>
    <% end %>
  </div>
</div>
