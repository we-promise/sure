<%# locals: (label:) %>
<%# Simple non-interactive badge for displaying activity labels %>
<%
  # Color mapping for different investment activity labels using design system tokens
  color_var = case label
  when "Buy", "Reinvestment"
    "var(--color-blue-500)"
  when "Sell"
    "var(--color-red-500)"
  when "Dividend", "Interest"
    "var(--color-green-500)"
  when "Contribution"
    "var(--color-violet-500)"
  when "Withdrawal"
    "var(--color-orange-500)"
  else
    "var(--color-gray-500)"
  end

  # Localize label if possible
  localized_label = t("investments.activity.labels.#{label.underscore}", default: label)
%>

<span class="inline-flex items-center gap-1 text-[10px] uppercase tracking-wider font-bold rounded px-1.5 py-0.5 border"
      style="
        background-color: color-mix(in oklab, <%= color_var %> 10%, transparent);
        border-color: color-mix(in oklab, <%= color_var %> 20%, transparent);
        color: <%= color_var %>;">
  <%= localized_label %>
</span>