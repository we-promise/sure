<%# locals: (percent:, size: 120, stroke_width: 8, color: "green") %>
<% circumference = 2 * Math::PI * ((size - stroke_width) / 2) %>
<% offset = circumference - (percent / 100.0 * circumference) %>

<svg width="<%= size %>" height="<%= size %>" class="transform -rotate-90">
  <!-- Background circle -->
  <circle
    cx="<%= size / 2 %>"
    cy="<%= size / 2 %>"
    r="<%= (size - stroke_width) / 2 %>"
    fill="none"
    stroke="currentColor"
    stroke-width="<%= stroke_width %>"
    class="text-surface-inset" />
  <!-- Progress circle -->
  <circle
    cx="<%= size / 2 %>"
    cy="<%= size / 2 %>"
    r="<%= (size - stroke_width) / 2 %>"
    fill="none"
    stroke="currentColor"
    stroke-width="<%= stroke_width %>"
    stroke-dasharray="<%= circumference %>"
    stroke-dashoffset="<%= offset %>"
    stroke-linecap="round"
    class="text-<%= color %>-500 transition-all duration-500" />
</svg>
