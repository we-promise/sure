<div class="w-full max-w-3xl mx-auto space-y-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-primary"><%= t(".title") %></h1>
    <%= link_to t(".new_goal"), new_saving_goal_path, class: "btn btn-primary" %>
  </div>

  <div class="flex items-center space-x-6 border-b border-subdued mb-8 overflow-x-auto">
    <% status_param = params[:status] || "active" %>
    <% %w[active paused completed archived all].each do |status| %>
      <%= link_to t(".filters.#{status}"), saving_goals_path(status: status),
          class: "pb-2 text-sm font-medium border-b-2 transition-colors whitespace-nowrap #{status_param == status ? 'border-primary text-primary' : 'border-transparent text-secondary hover:text-primary'}" %>
    <% end %>
  </div>

  <% if @saving_goals.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% @saving_goals.each do |goal| %>
        <%= render "goal_card", goal: goal %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-container rounded-xl shadow-border-xs">
      <div class="w-16 h-16 mx-auto mb-4 text-subdued bg-surface-inset rounded-full flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-primary"><%= t(".empty.title") %></h3>
      <p class="text-secondary mt-1 mb-6"><%= t(".empty.description") %></p>
      <%= link_to t(".new_goal"), new_saving_goal_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
