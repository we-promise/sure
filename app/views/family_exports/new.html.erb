<%= render DS::Dialog.new do |dialog| %>
  <% dialog.with_header(title: t(".title"), subtitle: t(".subtitle")) %>

  <% dialog.with_body do %>
    <div class="space-y-4">
      <div class="bg-container-inset rounded-lg p-4 space-y-3">
        <h3 class="font-medium text-primary"><%= t(".whats_included") %></h3>
        <ul class="space-y-2 text-sm text-secondary">
          <li class="flex items-start gap-2">
            <%= icon "check", class: "shrink-0 mt-0.5 text-positive" %>
            <span><%= t(".items.accounts") %></span>
          </li>
          <li class="flex items-start gap-2">
            <%= icon "check", class: "shrink-0 mt-0.5 text-positive" %>
            <span><%= t(".items.transactions") %></span>
          </li>
          <li class="flex items-start gap-2">
            <%= icon "check", class: "shrink-0 mt-0.5 text-positive" %>
            <span><%= t(".items.investments") %></span>
          </li>
          <li class="flex items-start gap-2">
            <%= icon "check", class: "shrink-0 mt-0.5 text-positive" %>
            <span><%= t(".items.metadata") %></span>
          </li>
        </ul>
      </div>

      <div class="bg-amber-50 border border-amber-200 rounded-lg p-3 theme-dark:bg-amber-900/20 theme-dark:border-amber-900/30">
        <p class="text-sm text-amber-800 theme-dark:text-amber-200">
          <strong><%= t(".note_title") %>:</strong> <%= t(".note_description") %>
        </p>
      </div>

      <%= form_with url: family_exports_path, method: :post, class: "space-y-4" do |form| %>
        <div class="flex gap-3">
          <%= render DS::Button.new(
                text: t(".cancel"),
                variant: :outline,
                class: "flex-1",
                type: "button",
                data: { action: "click->DS--dialog#close" }
              ) %>
          <%= render DS::Button.new(
                text: t(".submit"),
                variant: :primary,
                type: :submit,
                class: "flex-1"
              ) %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>