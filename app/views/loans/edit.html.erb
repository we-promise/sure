<%= render DS::Dialog.new do |dialog| %>
  <% title = @account.installment.present? ? t("loans.edit.installment") : t(".edit", account: @account.name) %>
  <% dialog.with_header(title: title) %>
  <% dialog.with_body do %>
    <%= render "form", account: @account, url: loan_path(@account) %>
  <% end %>
<% end %>
