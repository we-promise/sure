<% content_for :page_header do %>
  <div class="space-y-1 mb-6">
    <h1 class="text-xl lg:text-3xl font-medium text-primary">Outflows</h1>
    <p class="text-sm lg:text-base text-secondary">Spending breakdown by category</p>
  </div>
<% end %>

<div class="w-full pb-24">
  <section class="bg-container py-4 rounded-xl shadow-border-xs">
    <div class="flex justify-between items-center gap-4 px-4 mb-4">
      <h2 class="text-lg font-medium inline-flex items-center gap-1.5">
        Spending by category
      </h2>

      <%= form_with url: outflows_path, method: :get, data: { controller: "auto-submit-form" } do |form| %>
        <%= form.select :period,
                  Period.as_options,
                  { selected: @period.key },
                  data: { "auto-submit-form-target": "auto" },
                  class: "bg-container border border-secondary font-medium rounded-lg px-3 py-2 text-sm pr-7 cursor-pointer text-primary focus:outline-hidden focus:ring-0" %>
      <% end %>
    </div>

    <% if @outflows_data[:categories].present? %>
      <div class="px-4"
        data-controller="outflows-donut-chart"
        data-outflows-donut-chart-categories-value="<%= @outflows_data[:categories].to_json %>"
        data-outflows-donut-chart-currency-symbol-value="<%= @outflows_data[:currency_symbol] %>"
        data-outflows-donut-chart-start-date-value="<%= @period.date_range.first %>"
        data-outflows-donut-chart-end-date-value="<%= @period.date_range.last %>">
        <div class="flex flex-col lg:flex-row gap-8 items-center">
          <!-- Donut Chart -->
          <div class="w-full lg:w-1/3 max-w-[300px]">
            <div class="h-[300px] relative">
              <div data-outflows-donut-chart-target="chart" class="w-full h-full">
              </div>
            </div>
          </div>

          <!-- Category List -->
          <div class="w-full lg:w-2/3">
            <div class="space-y-2">
              <% @outflows_data[:categories].each do |category| %>
                <%= link_to transactions_path(q: { categories: [category[:id]], start_date: @period.date_range.first, end_date: @period.date_range.last }),
                    class: "flex items-center justify-between p-3 rounded-lg hover:bg-container-inset transition-colors cursor-pointer group",
                    data: {
                      category_id: category[:id],
                      action: "mouseenter->outflows-donut-chart#highlightSegment mouseleave->outflows-donut-chart#unhighlightSegment"
                    } do %>
                  <div class="flex items-center gap-3 flex-1">
                    <div class="w-3 h-3 rounded-full flex-shrink-0" style="background-color: <%= category[:color] %>"></div>
                    <span class="text-sm font-medium text-primary"><%= category[:name] %></span>
                  </div>
                  <div class="flex items-center gap-4">
                    <span class="text-sm font-medium text-primary"><%= @outflows_data[:currency_symbol] %><%= number_with_delimiter(category[:amount], delimiter: ',') %></span>
                    <span class="text-sm text-secondary"><%= category[:percentage] %>%</span>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="h-[300px] lg:h-[340px] bg-container py-4 flex flex-col items-center justify-center">
        <div class="space-y-3 text-center flex flex-col items-center">
          <%= render DS::FilledIcon.new(
            variant: :container,
            icon: "activity"
          ) %>

          <p class="text-sm font-medium text-primary">No outflow data for this time period</p>
          <p class="text-secondary text-sm">Add transactions to display outflow data or expand the time period</p>
          <%= render DS::Link.new(
            text: "Add transaction",
            icon: "plus",
            href: new_transaction_path,
            frame: :modal
          ) %>
        </div>
      </div>
    <% end %>
  </section>
</div>
