<%= link_to t("rules.edit.back_to_rules"), rules_path %>

<%= render DS::Dialog.new do |dialog| %>
  <%
    title = if @rule.name.present?
              t("rules.edit.edit_rule_title", resource_type: @rule.resource_type, name: @rule.name)
            else
              t("rules.edit.edit_rule_title_unnamed", resource_type: @rule.resource_type)
            end
  %>
  <% dialog.with_header(title: title) %>

  <% dialog.with_body do %>
    <%= render "rules/form", rule: @rule %>
  <% end %>
<% end %>
