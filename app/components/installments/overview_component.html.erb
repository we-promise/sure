<div class="bg-surface rounded-lg border border-surface-inset/50 p-4 space-y-4">
  <%# Progress Indicator %>
  <div>
    <div class="flex justify-between text-sm mb-2">
      <span class="text-secondary"><%= t("installments.overview.payment_progress") %></span>
      <span class="font-medium text-primary">
        <%= installment.payments_completed %> <%= t("installments.overview.of") %> <%= installment.total_term %>
      </span>
    </div>
    <div class="w-full bg-surface-inset rounded-full h-2">
      <div class="bg-green-600 h-2 rounded-full transition-all" style="width: <%= progress_percentage %>%"></div>
    </div>
  </div>

  <%# Next Payment %>
  <% if installment.next_payment_date && !installment.completed? %>
    <div class="flex justify-between items-center py-2 border-t border-surface-inset">
      <span class="text-secondary"><%= t("installments.overview.next_payment") %></span>
      <div class="text-right">
        <div class="font-medium text-primary"><%= helpers.format_money(installment.installment_cost, currency: currency) %></div>
        <div class="text-sm text-secondary"><%= helpers.l(installment.next_payment_date, format: :short) %></div>
      </div>
    </div>
  <% end %>

  <%# Breakdown %>
  <div class="border-t border-surface-inset pt-4 space-y-2">
    <div class="flex justify-between">
      <span class="text-secondary"><%= t("installments.overview.total_paid") %></span>
      <span class="font-medium text-primary"><%= helpers.format_money(total_paid, currency: currency) %></span>
    </div>
    <div class="flex justify-between">
      <span class="text-secondary"><%= t("installments.overview.remaining") %></span>
      <span class="font-medium text-primary"><%= helpers.format_money(remaining, currency: currency) %></span>
    </div>
  </div>

  <%# Edit Button %>
  <%= link_to edit_loan_path(installment.account),
              class: "btn btn-secondary w-full mt-4 inline-flex items-center justify-center",
              data: { turbo_frame: :modal } do %>
    <%= helpers.icon "pencil", size: "sm", class: "mr-2" %>
    <%= t("installments.overview.edit_details") %>
  <% end %>
</div>
